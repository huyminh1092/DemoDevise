<header>
  <!-- Header desktop -->
  <div class="header-menu-all">
    <div class="header-top-bar">
      <div class="flex-sb-m h-full container">
        <div class="header-left-top-bar">
          Free shipping for standard order over $100
        </div>
        <div class="header-right-top-bar d-flex">
          <a href="#" class="flex-c-m px-4">
            Help & FAQs
          </a>
          <a href="#" class="flex-c-m px-4">
            My Account
          </a>
          <a href="#" class="flex-c-m px-4">
            EN
          </a>
          <a href="#" class="flex-c-m px-4">
            USD
          </a>
        </div>
      </div>
    </div>

    <div class="header-wrap-menu-desktop">
      <nav class="header-limiter-menu-desktop container">
        <!-- Logo desktop -->
        <a href="#" class="header-logo">
          <%= image_tag ('logo-01.png') %>
        </a>
        <!-- Menu desktop -->
        <div class="header-menu-desktop">
          <ul class="header-main-menu">
            <li class="active-menu">
              <%= link_to "Home", root_path, clas:"nav-link" %>
            </li>
            
            <% if user_signed_in? %>   
              <% if current_user.has_role? :admin %>
                <li>
                <%= link_to "User Controller", users_path, clas:"nav-link" %>
                </li>
                <li>
                <%= link_to "Post Controller", posts_path, clas:"nav-link" %>
                </li>
              <% end %>         
              <li class="label1" data-label1="hot">
                <%= link_to "Edit User", edit_user_registration_path, class:"nav-link" %>
              </li>
              <li>
                <%= link_to 'Sign Out', destroy_user_session_path, data: {turbo_method: :delete} %>          
              </li>
            <% else %>
              <li class="active-menu">
               
                <%= button_to "Sign in with Github", user_github_omniauth_authorize_path, method: :post, data: { turbo: 'false'} %>
                <%= button_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, method: :post, data: { turbo: 'false'} %>
                <%= button_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, method: :post, data: {turbo: 'false'} %>
              </li>
              <li class="active-menu">
                <%= link_to "Sign Up", new_user_registration_path, class:"nav-link" %>
              </li>
              <li>
                <%= link_to "Sign In", new_user_session_path, clas:"nav-link" %>
              </li>
            <% end %>
            <li>
              <a href="about.html">About</a>
            </li>
            <li>
              <a href="contact.html">Contact</a>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </div>
</header>
