
<div style="overflow-x:auto;">
  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Email</th>
        <th>Name</th>
        <th>Image</th>
        <th>Role</th>
        <th>User</th>   
        <th>Creators</th>
        <th>Editors</th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <%= user.id %>
      <%= user.email %>
      <%= user.fullname %>
      <% if user.image.present? %>
      <%= image_tag user.image, size: "100x100"%>
      <% end %>
      <%= user.roles.pluck(:name) %>
      <%= link_to "Edit Roles", edit_user_path(user), clas:"nav-link" %>
      <%= user.posts.pluck(:id) %>
      <%= user.creator_posts.pluck(:id) %>
      <%= user.editor_posts.pluck(:id) %>
      <br>
    <% end %>
    </tbody>
  </table>
</div>